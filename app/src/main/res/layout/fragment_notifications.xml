<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bbbb"
    tools:context=".ui.notifications.NotificationsFragment">


    <View
        android:id="@+id/view2"
        android:layout_width="409dp"
        android:layout_height="708dp"
        android:background="#9C313333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/ImageNameEditText"
        android:layout_width="365dp"
        android:layout_height="55dp"

        android:layout_marginTop="8dp"
        android:background="@drawable/round1"
        android:gravity="center"
        android:hint="Image"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textColor="#F1EAEA"
        android:textColorHint="#FFFCFC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ShowImageView" />

    <EditText
        android:id="@+id/Pres"
        android:layout_width="366dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round1"
        android:ems="10"
        android:gravity="center"
        android:hint="Price"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFEFEF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImageNameEditText" />

    <Button
        android:id="@+id/ButtonUploadImage"
        android:layout_width="309dp"
        android:layout_height="53dp"
        android:layout_below="@+id/ImageNameEditText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/round"
        android:text="upload Post"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Pres" />

    <ImageView
        android:id="@+id/ShowImageView"
        android:layout_width="409dp"
        android:layout_height="235dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cloud_upload_black_24dp" />

    <TextView
        android:id="@+id/conter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="0.0%"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonUploadImage" />

    <ProgressBar
        android:id="@+id/ProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conter" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="409dp"
        android:layout_height="21dp"
        android:background="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>